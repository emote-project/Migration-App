			<name></name>
			<text>What is on the pavement?</text>
			<answer>
			    <item id="1" correct="yes">A post box</item>
				<item id="2">A telephone booth</item>
				<item id="3">A cash machine</item>
				<item id="4">A statue</item>
			</answer>
			<gesture></gesture>
		</question>
		<question>
			<name></name>
			<text>What initials are on it?</text>
			<answer>
				<item id="1">G. B. P</item>
				<item id="2">R. M.</item>
				<item id="3">Q. E. D.</item>
				<item id="4" correct="yes">G. R.</item>
			</answer>
			<gesture></gesture>
		</question>	
		<question>
			<name></name>
			<text>What is the collection time on Saturday?</text>
			<answer>
				<item id="1">13:15</item>
				<item id="2" correct="yes">12:30</item>
				<item id="3">11:00</item>
				<item id="4">9:45</item>
